<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <title>mdb</title>
    <link rel="stylesheet" href="app.css" />

  </head>
  <body>

    <header>

      <h1>Mentorship Database</h1>

      <nav>
        <a class="navLink" href="/">Home</a>
        <a class="navLink" href="/add-volunteer">Add Volunteer</a>
        <a class="navLink" href="/add-student">Add Student</a>
        <a class="navLink" href="/new-rel">Add relationship</a>
        <a class="navLink" href="#">Bulk entry</a>
        
      </nav>

    </header>

    <main>

      <h1><%= `${profile.fname} ${profile.lname}` %> | 
        <form method="POST" action="/edit-profile" class="form-inline">
          <input type="hidden" name="type" value="stu" />
          <input type="hidden" name="id" value="<%= profile.id %>" />
          <a onclick="this.parentNode.submit();">Edit</a>
        </form>
          <h2>Student | <span class='<%= profile.is_active %>'><%= profile.is_active %></span> | <span class='<%= profile.is_graduated %>'><%= profile.is_graduated %></span></h2>
          <div class='contact'>
            <h4>Phone</h4>
            <p><%= profile.phone %></p>
            <h4>Email</h4>
            <p><%= profile.email %></p>
            <h4>Address</h4>
            <p><%= profile.street %><br><%= profile.city %>, <%= profile.usstate %></p>
            <h4>Church</h4>
            <p><%= profile.church %></p>
            <h4>School</h4>
            <p><%= profile.school %></p>
            <h4>Location</h4>
            <p><%= profile.location %></p>
            <h4>Team</h4>
            <p><%= profile.team %></p>
          </div>
          <div class="relationships">
            <h2>Mentor(s)</h2>
            <% for (let i = 0; i < rels.length; i++) { %>
              <p>
                <form method="post" action="/profile">
                <input type="hidden" name="type" value="vol" />
                <input type="hidden" name="id" value="<%= rels[i].mentor_id %>" />
                <a onclick="this.parentNode.submit();"><%= `${rels[i].fname} ${rels[i].lname}` %></a>
                 | <%= rels[i].stage %>
                </form>
              </p>
            <% } %>
          </div>
          <div class="notes">
            <h2>Notes</h2>
            <p><%= profile.notes %></p>
          </div>

    </main>

  </body>
</html>
